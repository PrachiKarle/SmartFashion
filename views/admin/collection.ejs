<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Collections</title>
    <%- include('./navbar.ejs')%>
  </head>
  <body>
    <div class="row m-0 p-0">
      <div class="col-md-8 col-12 m-0 p-0 m-auto">
        <!-- Women's Collections -->
        <button
          class="btn btn-success ms-auto"
          data-bs-toggle="collapse"
          data-bs-target="#data1"
        >
          Add Women's Collections
        </button>

        <div class="collapse row m-0 p-5" id="data1">
          <form action="/admin/savecoll" method="post" enctype="multipart/form-data">
            <div class="form-group my-2">
              <label for="">Name</label>
              <input
                type="text"
                name="coll_name"
                class="form-control"
                placeholder="Enter Name" required
              /> 
            </div>
            <div class="form-group my-2">
              <label for="">Price</label>
              <input
                type="text"
                name="coll_price"
                class="form-control my-2"
                placeholder="Enter Price" required
              />
            </div>
            <div class="form-group my-2">
              <label for="">Image</label>
              <input
                type="file"
                name="coll_img"
                class="form-control my-2"
                placeholder="Enter Image" required
              />
            </div>
            <button class="btn btn-danger m-auto">Add</button>
          </form>
        </div>

        <table class="table table-hover table-bordered table-striped my-3">
          <thead>
            <tr>
              <th>Sr No</th>
              <th>Name</th>
              <th>Price</th>
              <th>Images</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% data.map((val,i)=>{%>
                <tr>
                    <td><%= i+1%></td>
                    <td><%= val.Name%></td>
                    <td><%= val.Price%></td>
                    <td><%= val.Image%></td>
                    <td>
                        <a href="/admin/edit_coll/<%= val.Id%>" onclick="return confirm('Are u sure ? ')">
                            <i class="fa fa-edit text-success fw-bold"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/admin/del_coll/<%= val.Id%>" onclick="return confirm('Are u sure ? ')">
                            <i class="fa fa-trash text-danger fw-bold"></i>
                        </a>
                    </td>
                </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
